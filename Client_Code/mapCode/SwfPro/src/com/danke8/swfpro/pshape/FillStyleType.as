package com.danke8.swfpro.pshape
{
	/**
	 * 填充样式类型 
	 * @author 小程序员
	 * 
	 */	
	public class FillStyleType
	{
		/**
		 * 实心填充
		 */		
		public static const SOLID_FILL:int=0x0;
		/**
		 * 线性渐变填充 
		 */		
		public static const LINEAR_GRADIENT_FILL:int=0x10;
		/**
		 * 径向渐变填充 
		 */		
		public static const RADIAL_GRADIENT_FILL:int=0x12;
		/**
		 * 焦距径向渐变填充（SWF8文件格式及更高版本）
		 */		
		public static const FOCAL_RADIAL_GRADIENT_FILL:int=0x13;
		/**
		 * 重复位图填充
		 */
		public static const REPEATING_BITMAP_FILL:int=0x40;
		/**
		 * 从裁剪位图填充
		 */			
		public static const CLIPPED_BITMAP_FILL:int=0x41;
		/**
		 * 非平滑重复位图
		 */			
		public static const NON_SMOOTHED:int =0x42;
		/**
		 * 非平滑剪切位图
		 */			
		public static const NON_SMOOTHED_CLIPPED:int=0x43;
	}
}