package control{
	import flash.display.Sprite;

	public class MapPanel extends Sprite{
		
		/**
		 * 隐藏
		 */		
		public function hide():void{
			if(this.parent!=null){
				this.visible=false;
			}
		}
		
		/**
		 * 显示 
		 */		
		public function show():void{
			if(this.parent!=null){
				this.visible=true;
			}
		}
		
		
		public function showXY(x:int,y:int):void{
			if(this.parent!=null){
				this.x=x;
				this.y=y;
				this.visible=true;
			}
		}
	}
}